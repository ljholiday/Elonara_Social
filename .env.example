###############################################
# Elonara Social Environment Configuration
###############################################
# Copy this file to `.env` and update values as needed.
# All values are loaded automatically by src/bootstrap.php.
###############################################

# ------------------------------------------------
# Application Metadata
# ------------------------------------------------
APP_NAME="Elonara Social"
# Base domain without protocol. Used for email headers & link building.
APP_DOMAIN="social.elonara.com"
# Canonical URL including protocol. Used for redirects and asset URLs.
APP_URL="https://social.elonara.com"

# Base path for compiled CSS/JS (relative or absolute URL).
# Example: "/assets" for local, "https://cdn.example.com/assets" for CDN.
ASSET_URL="/assets"

# Contact addresses used in outbound messages.
SUPPORT_EMAIL="support@social.elonara.com"
NOREPLY_EMAIL="noreply@social.elonara.com"

# ------------------------------------------------
# Database Connection
# ------------------------------------------------
DB_HOST="127.0.0.1"
DB_PORT=3306
DB_NAME="social_elonara"
DB_USERNAME="root"
DB_PASSWORD="root"
DB_CHARSET="utf8mb4"

# ------------------------------------------------
# Mail Transport (PHPMailer)
# ------------------------------------------------
SMTP_HOST="localhost"
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
# Set to "tls", "ssl", or leave blank to use PHPMailer's default STARTTLS.
SMTP_ENCRYPTION="tls"

# ------------------------------------------------
# Optional Feature Flags
# ------------------------------------------------
# Toggle experimental or in-progress features. Accepts "true"/"false".
# FEATURE_DEFAULT_COMMUNITIES=true

# ------------------------------------------------
# Logging / Debugging
# ------------------------------------------------
# Write detailed debug information to storage/debug.log (true/false).
APP_DEBUG=false

